generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 測試用 model => 檢查 Prisma 連線是否正常
model Playlist {
  id        String   @id @default(cuid())
  title     String
  createdAt DateTime @default(now())
}
